rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для пользователей
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Правила для детей
    match /children/{childId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.parentIds;
    }
    
    // Правила для измерений роста
    match /growth_measurements/{measurementId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для дневниковых записей
    match /diary_entries/{entryId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для активностей
    match /activities/{activityId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для сна
    match /sleep_entries/{sleepId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для питания
    match /nutrition_entries/{nutritionId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для прививок
    match /vaccinations/{vaccinationId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Правила для медицинских записей
    match /medical_records/{recordId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
        request.auth.uid in get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentIds;
    }
    
    // Запретить все остальное
    match /{document=**} {
      allow read, write: if false;
    }
  }
}